{% extends "page/mini-header.twig" %}

{% block content %}
    <div id="markdown_explorer"> </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/markdown.js/0.5.0/markdown.min.js"></script>

    <script>
        $().ready(function() {
            var href, defaultHref, queryParameterHref;

            defaultHref = markdown_explorer.getCurrentDirectory(window.location.href) + "index.md";
            queryParameterHref = markdown_explorer.getQueryParameterHref();

            if (queryParameterHref) {
                href = decodeURIComponent(queryParameterHref[1]);
            } else {
                href = defaultHref;
            }

            markdown_explorer.loadFromHref($('#markdown_explorer'), href);
        });
    </script>
{% endblock content %}


