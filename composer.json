{
  "name": "athens/core",
  "description": "Modern web framework in PHP for academic environments",
  "license": "MIT",
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "autoload-dev": {
    "classmap": [
      "test/"
    ]
  },
  "require": {
    "twig/twig" : "1.*",
    "dompdf/dompdf" : "0.8.*",
    "athens/csrf": "2.*",
    "phpoffice/phpexcel": "1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "5.*",
    "phpdocumentor/phpdocumentor": "2.*",
    "evert/phpdoc-md" : "~0.2.0",
    "codeclimate/php-test-reporter": "dev-master",
    "squizlabs/php_codesniffer": "2.*",
    "athens/standard": "*"
  },
  "bin": [
    "bin/athens"
  ]
}
