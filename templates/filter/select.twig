<div class="select-container" data-handle-for="{{ id }}">

    <select data-handle-for="{{ id }}">
        {% for key, option in options %}
            <option value="{{ key }}">{{ option }}</option>
        {% endfor %}
    </select>

</div>
<script>
    $(function() {
        athens.select.setupSelectFilter("{{ id }}");
    });
</script>