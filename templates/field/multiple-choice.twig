<span class="multiple-choice-field {{ classes|join(' ') }}" {{ data|writedata|raw }}>
    <select class="form-control"  name="{{ slug }}[]" multiple>
            {#<option {% if initial is empty %}selected{% endif %} {% if required %}disabled{% endif %}></option>#}
        {% for choiceSlug, choice in choices %}
            <option value="{{ choiceSlug }}" {% if choice.getValue in initial %}selected{% endif %}> {{ choice.getValue }} </option>
        {% endfor %}
    </select>
</span>
{% include "field/errors.twig" %}